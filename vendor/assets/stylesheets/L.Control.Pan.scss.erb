// Based on: https://github.com/kartena/Leaflet.Pancontrol
//
// Make the default zoom control align with the pan control.
// This is ugly.
// The parent box (class="leaflet-top leaflet-left")
// should make all the child boxes be center-aligned instead.
// Not sure if that is possible though.

.has-leaflet-pan-control .leaflet-control-zoom {
  position: relative;
  left:24px;
}

.leaflet-control-pan  {
  //   .leaflet-control-pan-down-wrap: top
  // + .leaflet-control-pan a: height
  // = 52 + 24 = 76
  height: 76px;
  //   .leaflet-control-pan-right-wrap: right
  // + .leaflet-control-pan a: width
  // = 52 + 24 = 76
  width: 76px; 
}

.leaflet-control-pan > div {
  border-radius: 4px;
}

.leaflet-control-pan > div {
  box-shadow: 0 1px 7px rgba(0,0,0,0.65);
}

.leaflet-control-pan a {
  background-color: #fff;
}

.leaflet-control-pan a{
  background-position: 50% 50%;
  background-repeat: no-repeat;
  display: block;
}

.leaflet-control-pan a {
  border-radius: 4px;
  height: 23px;
  width: 23px;
}

.leaflet-control-pan a:hover {
  background-color: #f4f4f4;
}

.leaflet-control-pan-up-wrap {
  left:26px;
  position:absolute;
}

.leaflet-control-pan-left-wrap {
  position:absolute;
  top:26px;
}

.leaflet-control-pan-right-wrap {
  left:52px;
  position:absolute;
  top:26px;
}

.leaflet-control-pan-down-wrap {
  left:26px;
  position:absolute;
  top:52px;
}

.leaflet-control-pan-up {
  background-image: url(<%= asset_path('L.Control.Pan/pan-up.png') %>);
}

.L.Control.Pan-control-pan-left {
  background-image: url(<%= asset_path('L.Control.Pan/pan-left.png') %>);
}

.L.Control.Pan-control-pan-right {
  background-image: url(<%= asset_path('L.Control.Pan/pan-right.png') %>);
}

.L.Control.Pan-control-pan-down {
  background-image: url(<%= asset_path('L.Control.Pan/pan-down.png') %>);
}

// Touch Alterations
.leaflet-touch {
  .leaflet-control-pan {
    height: 119px;
    width: 89px;

    div {
      border-radius: 10px;
      border: 4px solid rgba(0, 0, 0, 0.3);
      box-shadow: none;
    }

    a {
      border-radius: 7px;
      height: 30px;
      width: 30px;
    }
  }

  .leaflet-control-pan-up-wrap {
    left:26px;
  }

  .leaflet-control-pan-left-wrap {
    top:40px;
  }

  .leaflet-control-pan-right-wrap {
    left:52px;
    top:40px;
  }

  .leaflet-control-pan-down-wrap {
    left:26px;
    top:80px;
  }
}
