// Based on: https://github.com/kartena/Leaflet.Pancontrol
//
// Make the default zoom control align with the pan control.
// This is ugly.
// The parent box (class="leaflet-top leaflet-left")
// should make all the child boxes be center-aligned instead.
// Not sure if that is possible though.

.has-leaflet-pan-control {
  position: relative;
  padding-top: 92px;

  .leaflet-control-fullscreen,
  .leaflet-control-zoom {
    position: relative;
    left:27px;
  }
}

.leaflet-control-pan  {
  height: 82px;
  left: 0;
  position: absolute;
  top: 0;
  width: 82px;
}

.leaflet-control-pan > div {
  border-radius: 4px;
}

.leaflet-control-pan > div {
  box-shadow: 0 1px 5px rgba(0, 0, 0, 0.65);
}

.leaflet-control-pan a {
  background-color: #fff;
}

.leaflet-control-pan a {
  background-position: 50% 50%;
  background-repeat: no-repeat;
  background-size: 10px 10px;
  display: block;
}

.leaflet-control-pan a {
  border-radius: 4px;
  height: 26px;
  width: 26px;
}

.leaflet-control-pan a:hover {
  background-color: #f4f4f4;
}

.leaflet-control-pan-up-wrap {
  left:27px;
  position:absolute;
}

.leaflet-control-pan-left-wrap {
  position:absolute;
  top:28px;
}

.leaflet-control-pan-right-wrap {
  left:54px;
  position:absolute;
  top:28px;
}

.leaflet-control-pan-down-wrap {
  left:27px;
  position:absolute;
  top:55px;
}

.leaflet-control-pan-up {
  background-image: url(<%= asset_path('pointer-up.png') %>);
}

.leaflet-control-pan-left {
  background-image: url(<%= asset_path('pointer-left.png') %>);
}

.leaflet-control-pan-right {
  background-image: url(<%= asset_path('pointer-right.png') %>);
}

.leaflet-control-pan-down {
  background-image: url(<%= asset_path('pointer-down.png') %>);
}

// Touch Alterations
.leaflet-touch {
  .has-leaflet-pan-control {
    padding-top: 124px;

    .leaflet-control-fullscreen,
    .leaflet-control-zoom {
      left:31px;
    }
  }

  .leaflet-control-pan {
    height: 119px;
    width: 88px;

    div {
      border: 2px solid rgba(0, 0, 0, 0.2);
      background-clip: padding-box;
      box-shadow: none;
    }

    a {
      height: 30px;
      width: 30px;
    }
  }

  .leaflet-control-pan-up-wrap {
    left:31px;
  }

  .leaflet-control-pan-left-wrap {
    top:40px;
  }

  .leaflet-control-pan-right-wrap {
    left:63px;
    top:40px;
  }

  .leaflet-control-pan-down-wrap {
    left:31px;
    top:78px;
  }
}
