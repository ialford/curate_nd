@import 'global-variables';

.hero {
  background-color: $official-blue;
  background-image: none;
  background-position: top center;
  background-repeat: no-repeat;
  background-size: 100%;
  margin: 0;
  padding: 1em 0 0;
  position: relative;
}

@media (min-width: 700px) {
  .hero {
    background-image: url(<%= asset_path 'hero/basilica-dome-quad-1000.jpg'%>);
    padding-top: 2em;
    background-size:cover;
  }
}

@media (min-width: 1200px) {
  .hero {
    background-image: url(<%= asset_path 'hero/basilica-dome-quad-1500.jpg'%>);
    padding-top: 3em;
  }
}

$logo-width: 221;
$logo-height: 48;

.logo-wrapper {
  font-size: 1em;
  margin: 0 auto 1em;
  padding: 0;
  padding-top: percentage(($logo-height / $logo-width * 60) / 100);
  position: relative;
  width: 60%;

  .curate-nd-logo {
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
  }
}

@media (min-width: 1200px) {
  .logo-wrapper {
    padding-top: percentage(($logo_height / $logo_width * 40) / 100);
    width: 39%;
    margin-bottom: 3em;
  }
}

.im-looking-for {
  background-color: rgba(0, 31, 66, .8);
  margin-top: 3em;
  padding: 1em;

  h2 {
    text-align: center;
    color: $official-gold;
  }

  .categories {
    list-style: none;
    margin: 0;
    padding: 0;
    text-align: center;
  }

  .category-list {
    margin: 0;
    padding-top: 1em;
  }

  .category {
    color: $official-gold;
    display: block;
    margin: 0 .6em;
    height: 5em;
    text-align: left;
  }

  .category-icon {
    float: left;
    width: 4em;
  }

  .caption {
    color: $official-gold;
    display: inline;
    float: left;
    font-size: 1em;
    line-height: 4;
    margin: 0;
    padding-left: .5em;
  }

  .catalog-browse {
    display: block;
    float: left;
    outline: 2px solid transparent;
    padding: 0 .5em;
    width: 100%;

    &:focus,
    &:hover {
      outline-color: $blue-accent;
    }

    &:focus,
    &:hover,
    &:visited {
      text-decoration: none;
    }
  }
}

@media (min-width: 500px) {
  .im-looking-for {
    padding: 2em;

    .category {
      display: inline-block;
      height: auto;
      padding-left: 0;
      text-align: center;
      width: 8em;
    }

    .category-icon {
      left: auto;
      position: relative;
      top: auto;
      width: 100%;
      float: none;
    }

    .caption {
      line-height: 1.2;
      display: block;
      float: none;
      padding-left: 0;
    }

    .catalog-browse {
      display: inline-block;
      padding: 0 .5em 2em;
      float: none;
    }
  }
}

@media (min-width: 900px) {
  .im-looking-for {
    .category {
      width: 14em;
    }

    .caption {
      font-size: 2em;
    }
  }
}

@media (min-width: 1200px) {
  .im-looking-for {
    .category {
      margin: 0 1em;
    }
  }
}
