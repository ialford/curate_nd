@import 'global-variables';

.hero {
  background-image: url(<%= asset_path 'hero/sunset-basilica-500.jpg'%>);
  background-position: top center;
  -moz-background-size: cover;
  -o-background-size: cover;
  -webkit-background-size: cover;
  background-size: cover;
  height: 416px;
  margin: 0;
  padding: 1em 0 0;
  position: relative;
}

@media (min-width: 700px) {
  .hero {
    height: 600px;
    padding-top: 2em;
    background-image: url(<%= asset_path 'hero/sunset-basilica-1000.jpg'%>);
  }
}
@media (min-width: 960px) {
  .hero {
    height: 940px;
    padding-top: 3em;
    background-image: url(<%= asset_path 'hero/sunset-basilica-1500.jpg'%>);
  }
}

$logo-width: 221;
$logo-height: 48;

.logo-wrapper {
  font-size: 1em;
  margin: 0 auto 1em;
  padding: 0;
  padding-top: percentage(($logo-height / $logo-width * 60) / 100);
  position: relative;
  width: 60%;

  .curate-nd-logo {
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
  }
}

@media (min-width: 1200px) {
  .logo-wrapper {
    padding-top: percentage(($logo_height / $logo_width * 40) / 100);
    width: 40%;
    margin-bottom: 3em;
  }
}

.im-looking-for {
  background-color: rgba(0, 31, 66, .8);
  margin-top: 3em;
  padding: 2em;

  h2 {
    text-align: center;
    color: $official-gold;
  }

  .categories {
    list-style: none;
    margin: 0;
    padding: 0;
    text-align: center;
  }

  .category-list {
    margin: 0;
    padding-top: 1em;
  }

  .category {
    color: $official-gold;
    display: inline-block;
    margin: 0 .6em;
    width: 12em;

    .caption {
      color: $official-gold;
      line-height: 1.2;
      margin: 0;
    }
  }

  .catalog-browse {
    display: inline-block;
    outline: 2px solid transparent;
    padding: 0 .5em 2em;

    &:focus,
    &:hover {
      outline-color: $blue-accent;
    }

    &:focus,
    &:hover,
    &:visited {
      text-decoration: none;
    }
  }
}
