@import 'global-variables';

.hero {
  background-color: $official-blue;
  background-image: none;
  background-position: top center;
  background-repeat: no-repeat;
  background-size: 100%;
  clear: both;
  float: left;
  margin: 0;
  padding: 1em 0 0;
  position: relative;
  width: 100%;
}

@media (min-width: 700px) {
  .hero {
    background-image: url(<%= asset_path 'hero/basilica-dome-quad-1000.jpg'%>);
    background-size: cover;
    padding-top: 2em;
  }
}

@media (min-width: 1200px) {
  .hero {
    background-image: url(<%= asset_path 'hero/basilica-dome-quad-1500.jpg'%>);
    padding-top: 3em;
  }
}

$logo-width: 221;
$logo-height: 48;

.logo-wrapper {
  font-size: 1em;
  margin: 0 auto 1em;
  padding: 0;
  padding-top: percentage(($logo-height / $logo-width * 60) / 100);
  position: relative;
  width: 60%;

  .curate-nd-logo {
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
  }
}

@media (min-width: 1200px) {
  .logo-wrapper {
    margin-bottom: 3em;
    padding-top: percentage(($logo_height / $logo_width * 40) / 100);
    width: 39%;
  }
}

.im-looking-for {
  box-sizing: border-box;
  clear: both;
  float: left;
  font-size: 18px;
  margin-top: 3em;
  padding: 1em;
  width: 100%;

  h2 {
    color: $official-gold;
    text-align: center;
  }

  .categories {
    clear: both;
    float: left;
    list-style: none;
    margin: 0;
    padding: 0;
    text-align: center;
  }

  .category-list {
    clear: both;
    float: left;
    margin: 0;
    padding-top: 1em;
  }

  .category {
    clear: both;
    color: $official-gold;
    display: block;
    float: left;
    height: 5em;
    margin: 0 .6em;
    text-align: left;
  }

  .category-icon {
    float: left;
    width: 3em;
  }

  .caption {
    color: $official-gold;
    display: inline;
    float: left;
    font-size: 16px;
    line-height: 3.5;
    margin: 0;
    padding-left: .5em;
  }

  .catalog-browse {
    display: block;
    float: left;
    outline: 2px solid transparent;
    padding: 0 .5em;
    width: 100%;

    &:focus,
    &:hover {
      outline-color: $blue-accent;
    }

    &:focus,
    &:hover,
    &:visited {
      text-decoration: none;
    }
  }
}

@media (min-width: 400px) {
  .im-looking-for {
    .category-icon {
      width: 4em;
    }

    .caption {
      font-size: 22px;
    }
  }
}

@media (min-width: 600px) {
  .im-looking-for {
    padding: 2em;

    .category {
      display: inline-block;
      height: auto;
      padding-left: 0;
      text-align: center;
      width: 8em;
    }

    .category-icon {
      left: auto;
      position: relative;
      top: auto;
      width: 100%;
    }

    .caption {
      display: block;
      font-size: 18px;
      line-height: 1.2;
      padding-left: 0;
    }

    .catalog-browse {
      display: inline-block;
      padding: 0 .5em 2em;
    }

    .hero,
    .im-looking-for,
    .categories,
    .category-list,
    .category,
    .caption,
    .category-icon,
    .catalog-browse {
      float: none;
    }
  }
}

@media (min-width: 700px) {
  .im-looking-for {
    background-color: rgba(0, 31, 66, .8);
  }
}

@media (min-width: 900px) {
  .im-looking-for {
    h2 {
      font-size: 2.3em;
    }

    .category {
      width: 14em;
    }

    .caption {
      font-size: 1.8em;
    }
  }
}

@media (min-width: 1200px) {
  .im-looking-for {
    .category {
      margin: 0 1em;
    }
  }
}

.call-for-deposit {
  padding: .8em 0 1.4em;

  .emphatic-action-wrapper {
    text-align: center;
  }
}

@media (min-width: 1200px) {
  .call-for-deposit {
    padding: .8em 0 2em;
  }

  .emphatic-action-wrapper {
    font-size: 1.4em;
  }
}

.mission-statement {
  text-align: center;
  margin: .7em 0 .5em;
}

@media (min-width: 1200px) {
  .mission-statement {
    margin: 1.2em 0 .7em;
  }
}

.crosshatch {
  background-image: url(<%= asset_path 'bg.png' %>);
  background-repeat: repeat;
  border-color: #F1F1F1;
  border-style: solid;
  border-width: 1px 0;
}

.dark-blue {
  background-color: $blue-dark;
  clear: both;
  color: $white;

  h1 {
    color: $white;
    padding: 1em .5em 0;
    text-align: center;

    + hr {
      margin-top: 3em;
    }
  }

  hr {
    border-bottom: 1px solid $official-gold-accent;
    border-top: 2px solid $official-gold;
    margin: 1em auto;
    max-width: 33em;
  }
}

@media (max-width: 900px) {
  .dark-blue {
    h1 {
      font-size: 22px;
      line-height: 1.4;

      + hr {
        margin-top: 2em;
        max-width: 16em;
      }
    }
  }
}

.curate-nd-homepage + .page-footer-wrapper {
  background-color: $blue-dark;
  border: 1px solid $blue-dark;

  .page-footer {
    color: $white;
  }

  a,
  a:hover,
  a:visited {
    border-color: $official-gold;
    color: $official-gold;
  }

  a.btn {
    color: $gray-dark;
  }

  .hesburgh-mark {
    background-image: url(<%= asset_path 'hesburgh-mark-white.png'%>);
  }
}
