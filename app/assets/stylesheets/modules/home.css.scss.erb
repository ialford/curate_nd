@import 'global-variables';

.page-main h1,
.page-main h2,
.page-main h3,
.page-main h4,
.page-main h5,
.page-main h6 {
  color: $official-blue-dark;
}

.page-main.home {
  margin-bottom: 8%;
}

.page-banner.home {
  position: fixed;
  width: 100%;
  z-index: 2;
}

.header-spacer {
  height: 8.6em;
}

@media (min-width: 545px) {
  .header-spacer {
    height: 5.7em;
  }
}

@media (min-width: 600px) {
  .header-spacer {
    height: 7em;
  }
}

.hero {
  background-image: url(<%= asset_path 'hero/sunset-basilica-500.jpg'%>);
  background-position: top center;
  -moz-background-size: cover;
  -o-background-size: cover;
  -webkit-background-size: cover;
  background-size: cover;
  height: 416px;
  margin: 0;
  padding: 1em 0 0;
  position: relative;
}

@media (min-width: 700px) {
  .hero {
    height: 600px;
    padding-top: 2em;
    background-image: url(<%= asset_path 'hero/sunset-basilica-1000.jpg'%>);
  }
}
@media (min-width: 960px) {
  .hero {
    height: 940px;
    padding-top: 3em;
    background-image: url(<%= asset_path 'hero/sunset-basilica-1500.jpg'%>);
  }
}

$logo-width: 221;
$logo-height: 48;

.logo-wrapper {
  font-size: 1em;
  margin: 0 auto -7.5em;
  padding: 0;
  padding-top: percentage(($logo-height / $logo-width * 60) / 100);
  position: relative;
  width: 60%;

  .curate-nd-logo {
    height: 100%;
    left: 0;
    position: absolute;
    top: 0;
    width: 100%;
  }
}

.feature-navigation-wrapper {
  padding-top: 8.85em;
  z-index: 1;
}

@media (min-width: 545px) {
  .logo-wrapper {
    margin-bottom: -3.6em;
  }

  .feature-navigation-wrapper {
    padding-top: 5.8em;
  }
}

@media (min-width: 600px) {
  .logo-wrapper {
    margin-bottom: -5em;
  }

  .feature-navigation-wrapper {
    padding-top: 7.2em;
  }
}

@media (min-width: 1200px) {
  .logo-wrapper {
    padding-top: percentage(($logo_height / $logo_width * 40) / 100);
    width: 40%;
  }
}

#more-information {
  font-weight: bold;
  letter-spacing: .1em;
  margin: 0 auto;
  text-align: center;
  text-shadow: none;
  text-transform: uppercase;
  width: 100%;
  z-index: 1;

  .feature-navigation-wrapper {
    border-bottom: 2px solid $official-gold-accent;
    display: table;
    margin: 0 auto;
  }

  .feature-navigation {
    background-color: $official-gold;
    display: table-row;
    font-size: .8em;
    list-style-type: none;
    margin: 0;
    padding: 0;
    text-align: center;
  }

  .feature-link-wrapper {
    display: table-cell;
  }

  .feature-link,
  .feature-link:visited {
    color: $official-blue;
  }

  .feature-link {
    background-color: $official-gold;
    display: block;
    padding: .3em .6em;
    text-align: center;
    -moz-transition: all 250ms ease-in-out;
    -webkit-transition: all 250ms ease-in-out;
    transition: all 250ms ease-in-out;
  }

  .feature-link:hover {
    background-color: $official-gold-accent;
    color: $white;
    text-decoration: none;
  }
}

#press-release {
  border: 1px solid transparent;
  font-size: .8em;
  margin: 0 auto;
  padding: .5em .7em;
  -moz-transition: all 250ms ease-in-out;
  -webkit-transition: all 250ms ease-in-out;
  transition: all 250ms ease-in-out;
  width: 26.79em;

  a,
  a:hover,
  a:visited {
    color: $white;
    line-height: 2;
  }
}

@media (min-width: 400px) {
  #press-release,
  #more-information .feature-navigation {
    font-size: 1em;
  }

  #press-release {
    width: 26em;
  }
}

@media (min-width: 768px) {
  #press-release,
  #more-information .feature-navigation {
    font-size: 1.4em;
  }

  #press-release {
    width: 29.2em;
  }

  #more-information .feature-link {
    letter-spacing: .1em;
    padding: .6em 1em;
  }
}

@media (min-width: 960px) {
  #press-release,
  #more-information .feature-navigation {
    font-size: 1.8em;
  }

  #press-release {
    width: 30.6em;

    a {
      font-size: .8em;
    }
  }

  #more-information .feature-link {
    letter-spacing: .15em;
    padding: .6em 1em;
  }
}

.site-features {
  h1 {
    background-color: $official-blue-dark;
    color: $white;
    font-size: 1.8em;
    line-height: 1.4;
    margin: 0;
    padding: .5em;
    text-align: center;
  }

  h2 {
    padding-bottom: .3em;
    padding-top: 1.5em;
  }

  p {
    color: $official-blue-dark;
  }

  .feature {
    padding: 0 0 3em;

    &.dark-blue {
      padding: 2em 0;
    }
  }

  .dark-blue {
    background-color: $official-blue-dark;
    color: $white;

    p,
    h2,
    h3,
    h4 {
      color: $white;
    }

    a,
    a:hover,
    a:visited {
      border-color: $official-blue;
      color: $official-blue;
    }

    abbr {
      border-color: $official-blue;
    }

    + .angle-wrapper {
      margin-bottom: 0;
      margin-top: -1px;

      .angle {
        top: 0;

      }
    }

    .feature-questions {
      li {
        color: $white;
      }

      li:before {
        border-color: $white;
      }
    }
  }

  .angle {
    background-color: $official-blue-dark;
    height: 100%;
    left: -10%;
    position: absolute;
    top: 100%;
    -webkit-transform: rotate(-2deg);
    transform: rotate(-2deg);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    width: 120%;
    z-index: -1;
  }

  .angle-wrapper {
    height: 2em;
    margin-bottom: -1px;
    margin-top: 0;
    overflow: hidden;
    position: relative;
  }

  .feature-questions {
    list-style-type: none;
    margin: 0 0 1em 1.1em;

    li {
      color: $official-blue-dark;
      font-family: $headerFontFamily;
      font-size: 1.4em;
      line-height: 1.25;
      padding-bottom: .5em;
      position: relative;
    }

    li:before {
      border-color: $official-blue-dark;
      border-style: solid;
      border-width: .15em;
      content: '';
      left: -.7em;
      position: absolute;
      top: .55em;
    }
  }

  article {
    padding: 0 1em;

    p {
      max-width: 30em;
    }
  }

}

@media (min-width: 600px) {
  .site-features {
    .angle-wrapper {
      height: 3em;
    }

    .feature {
      padding: 0 0 5em;

      &.dark-blue {
        padding: 2em 0 3em;
      }
    }
  }
}

@media (min-width: 768px) {
  .site-features {
    h1 {
      font-size: 2.2em;
      line-height: 1.4;
      padding: .5em 2em;
    }

    h2 {
      font-size: 3em;
      line-height: 2;
    }

    article {
      padding: 0;

      p {
        font-size: 1.2em;
        line-height: 1.2;
      }
    }

    .feature-questions {
      margin: 0 0 1em 1.5em;

      li {
        font-size: 2em;
      }

      li:before {
        border-width: .1em;
      }
    }
  }
}

@media (min-width: 960px) {
  .site-features {
    .angle-wrapper {
      height: 4em;
    }

    h1 {
      font-size: 3em;
      line-height: 1.6;
      padding: 2em 2em 1em;
    }

    h2 {
      font-size: 4em;
    }

    .feature-questions {
      margin: 0 0 1em 1.9em;

      li {
        font-size: 2.5em;
      }
    }

    article p {
      font-size: 1.4em;
      line-height: 1.4;
    }
  }

  .home+.page-footer {
    padding-top: 5em;
  }
}

@media (min-width: 1200px) {
  .site-features {
    .angle-wrapper {
      height: 6em;
    }
  }
}

@media (min-width: 2000px) {
  .site-features {
    .angle-wrapper {
      height: 8em;
    }
  }
}

