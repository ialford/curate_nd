<fieldset class="optional prompt">
  <legend>Additional Information</legend>

  <%= f.input :patent_office_link, label: 'USPTO Link', input_html: { class: 'input-xlarge' } %>
  <%= f.input :creator, as: :multi_value, label: 'Inventor', input_html: { class: 'input-xlarge', placeholder: 'George Washington' } %>
  <%= f.input :creators_from_local_institution, as: :multi_value, label: 'Inventor From Local Institution', input_html: { class: 'input-xlarge', placeholder: 'George Washington' } %>
  <%= f.input :other_application, as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :application_date, input_html: { class: 'input-xlarge' } %>
  <%= f.input :prior_publication_date, as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :prior_publication, label: 'Prior Publication Number', as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :number_of_claims, label: 'Claims',  input_html: { class: 'input-xlarge' } %>
  <%= f.input :us_patent_classification_code, label: 'Classification (US Patent)', as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :cooperative_patent_classification_code, label: 'Classification (CPC Patent)',as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :international_patent_classification_code, label: 'Classification (IPC Patent)', as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :language, as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :alephIdentifier,         as: :multi_value, label: "Aleph Record Number" , input_html: { class: 'input-xlarge' } %>
  <%= f.input :date_issued, label: 'Date Issued', input_html: { class: 'input-xlarge' } %>
  <%= f.input :publisher, label: 'Publisher', as: :multi_value, input_html: { class: 'input-xlarge', id: 'publisher' } %>
  <%= f.input :rights_holder, label: 'Assignee', as: :multi_value, input_html: { class: 'input-xlarge' } %>
</fieldset>
