<fieldset class="optional prompt">
  <legend>Additional Information</legend>

  <%= f.input :description,
              as: :text,
              input_html: {
                class: 'input-xxxlarge rich-textarea-js',
                rows: '14'
              },
              label: 'Description'
  %>
  <%= f.input :alternate_title,         as: :multi_value, label: 'Alternate Title', input_html: { class: 'input-xlarge' } %>
  <%= f.input :performer,               as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :director,                 as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :screenwriter,               as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :interviewer,             as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :interviewee,             as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :speaker,             as: :multi_value, input_html: { class: 'input-xlarge' } %>  
  <%= f.input :producer,                as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :production_company,      as: :multi_value, label: 'Production Company', input_html: { class: 'input-xlarge' } %>
  <%= f.input :creator,                 as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :contributor,             as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :duration,                placeholder: '00:00:00', input_html: { class: 'input-xlarge' } %>
  <%= f.input :subject,                 as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :genre,                   as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :language,                as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :is_part_of,              as: :multi_value, label: 'Part of', input_html: { class: 'input-xlarge' } %>
  <%= f.input :date_created,            label: 'Date Created', input_html: { class: 'input-xlarge datepicker'} %>
  <%= f.input :publisher,               as: :multi_value, input_html: { class: 'input-xlarge', id: 'publisher' } %>
  <%= f.input :publication_date,        placeholder: 'YYYY-MM', input_html: { class: 'input-xlarge' } %>
  <%= render 'form_administrative_unit', curation_concern: curation_concern, f: f, select_label_id: 'add-to-administrative-unit', button_class: 'btn btn-primary' %>
  <%= f.input :source,                  as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :relation,                as: :multi_value, label: "Related Resource(s)", input_html: {class: 'input-xlarge', type:'url'} %>
  <%= f.input :alephIdentifier,         as: :multi_value, label: "Aleph Record Number" , input_html: { class: 'input-xlarge' } %>
</fieldset>
