<fieldset class="optional prompt">
  <legend>Additional Information</legend>
  <%= f.input :affiliation,
              as: :select,
              collection: affiliations,
              input_html: { class: 'input-xlarge' }
  %>

  <%= f.input :alternate_title,            as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :author,                     as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :coauthor,                   as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :contributor,                as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :editor,                     as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :contributing_editor,        as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :artist,                     as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :contributing_artist,        as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :illustrator,                as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :contributing_illustrator,   as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :photographer,               as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :contributing_photographer,  as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :copyright_date,             input_html: { class: 'input-xlarge' } %>
  <%= f.input :table_of_contents,          input_html: { class: 'input-xlarge' } %>
  <%= f.input :extent,                     as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :isbn,                       as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :local_identifier,           as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :publication_date,           input_html: { class: 'input-xlarge' } %>
  <%= f.input :edition,                    input_html: { class: 'input-xlarge' } %>
  <%= f.input :lc_subject,                 as: :multi_value, input_html: { class: 'input-xlarge' } %>

  <%= render 'form_administrative_unit', curation_concern: curation_concern, f: f, select_label_id: 'add-to-administrative-unit', button_class: 'btn btn-primary' %>
  <%= f.input :contributor,             as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :alternate_title,         as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :type, collection: Document.valid_types, input_html: { class: 'input-xlarge' } %>
  <%= f.input :date_created,            input_html: { class: 'input-xlarge datepicker' } %>
  <%= f.input :subject,                as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :publisher,               as: :multi_value, label: "Publisher (Required for DOI)", input_html: { class: 'input-xlarge', id: 'publisher' } %>
  <%= f.input :recommended_citation, as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :language,             as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :source,                as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :temporal_coverage,       as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :spatial_coverage,       as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :repository_name,        as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :collection_name,         as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :size,                    as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :requires,                as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :contributor_institution, as: :multi_value, input_html: { class: 'input-xlarge' } %>
</fieldset>
