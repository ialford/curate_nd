<fieldset class="optional prompt">
  <legend>Additional Information</legend>
  <%= f.input :alternate_title,
    label: 'Alternate Title',
    as: :multi_value,
    input_html: { class: 'input-xlarge' }
  %>
  <%= f.input :abstract,
    label: 'Description',
    input_html: { class: 'input-xxlarge rich-textarea-js', rows: '9' },
    as: :text
  %>
  <%= f.input :affiliation,
    label: 'Academic Status',
    as: :select,
    collection: affiliations,
    input_html: { class: 'input-xlarge' }
  %>
  <%= render 'form_administrative_unit',
    curation_concern: curation_concern,
    f: f,
    select_label_id: 'add-to-administrative-unit',
    button_class: 'btn btn-primary'
  %>
  <%= f.input :creator, label: 'Author', as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :issued_by, label: 'Issued By', as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :promulgated_by, label: 'Promulgated By', as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :date_issued, label: 'Date Published', placeholder: 'YYYY', input_html: { class: 'input-xlarge datepicker' } %>
  <%= f.input :date, label: 'Date Issued', placeholder: 'YYYY', input_html: { class: 'input-xlarge datepicker' } %>
  <%= f.input :promulgated_date, label: 'Date Promulgated', placeholder: 'YYYY', input_html: { class: 'input-xlarge datepicker' } %>
  <%= f.input :subject, as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :extent, label: 'Number of Pages', as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :spatial_coverage, label: 'Spatial Coverage', as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :temporal_coverage, label: 'Temporal Coverage', as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :language, as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :repository_name, label: 'Repository', as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :publisher, as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :source, as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :rights_holder, label: 'Rights Holder', input_html: { class: 'input-xxlarge rich-textarea-js', rows: '5' },  as: :text %>
  <%= f.input :copyright_date, label: 'Copyright Date', placeholder: 'YYYY', input_html: { class: 'input-xlarge' } %>
  <%= f.input :requires, as: :multi_value, input_html: { class: 'input-xlarge' } %>
  <%= f.input :alephIdentifier,         as: :multi_value, label: "Aleph Record Number" , input_html: { class: 'input-xlarge' } %>
</fieldset>
