  <h3><%= t("curate.catalog.facet_title.#{params[:id]}").html_safe %></h3>
</div>

<div class="modal-body">
  <%
    help_text = t("curate.catalog.help_text.#{params[:id]}").html_safe
    unless help_text.blank?
