  <% end %>

  <%= link_to named_policy_path('designated-communities'), class: 'policy-anchor' do %>
  <h2 class="policy-heading">
    Designated Communities
    <small class="effective-date">Effective Date: <time datetime="2015-10-16">October 16, 2015</time></small>
  </h2>
  <% end %>

