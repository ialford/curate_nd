<% on_about_page = current_page?(controller: 'static_pages', action: 'about') rescue false %>
<% if on_about_page %>
  <%= link_to 'Home', '/', class: 'btn btn-primary home', role: 'menuitem' %>
<% else %>
  <%= link_to 'About', '/about', class: 'btn btn-primary about', role: 'menuitem' %>
<% end %>
<% if current_user %>
  <%= render 'shared/add_content' %>
  <%= render 'shared/my_actions' %>
<% else %>
  <%= link_to 'Log In', new_user_session_path, class: 'btn btn-primary login', role: 'menuitem' %>
<% end %>
<%= link_to 'FAQ', '/faqs', class: 'btn btn-primary faq', role: 'menuitem' %>
